{{navbar-home}}

<div class="results">
  <h1>Recipes for: {{ingred}}</h1>
  <div class="panel-group" id="accordion">
    {{#each model.hits as |item index|}}
      <div class="panel panel-default">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapse{{index}}">
        <div class="panel-heading">
          <h2 class="panel-title">
            {{item.recipe.label}}
            <span class="glyphicon glyphicon-arrow-down"></span>
          </h2>
        </div>
      </a>
        <div id="collapse{{index}}" class="panel-collapse collapse">
          <div class="panel-body">
            <iframe height="2000px" width="100%" src="{{item.recipe.url}}"></iframe>
            {{!--<ul>
              <li>Source: {{item.recipe.url}}</li>
              <li><img src="{{item.recipe.image}}" />"</li>
              <li>
                {{#each item.recipe.ingredientLines as |test|}}
                  <li>{{test}}</li>
                {{/each}}
              </li>
            </ul>--}}
          </div>
        </div>
      </div>
      {{else}}
      <div><h1>Sorry, there are no recipes with the given ingredients</h1></div>
    {{/each}}
  </div>
</div>
